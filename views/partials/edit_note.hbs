<!-- Edit Note Modal -->
<div class="modal fade" id="editNoteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add an edit to your note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="x" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row note">
                    <div class="col-xs-1 align-middle text-center pl-1">
                        <span class='timestamp'>{{ this.timestamp }}</span>
                    </div>
<!--                    <div class='col-xl-11' style="white-space: pre-wrap;">-->
                    <div class='col-xl-11'>
                        {{ this.content }}<br>
                    </div>
                    {{#if this.edits}}
                            <span class="ml-4 pl-4"><strong>Edits:</strong></span><br>
                            {{#each this.edits}}
                                <div class="row note">
                                    <div class="col-xs-1 align-middle text-center pl-1">
                                        <span class='timestamp'>{{ this.timestamp }}</span>
                                    </div>
                                    <div class='col-xl-11' style="white-space: pre-wrap;">{{ this.content }}</div>
                                </div>
                            {{/each}}
                    {{/if}}
                </div>

                <div class="input-group text_input_div mt-4">
                    <textarea name='addon' form='edit_note_form{{this._id}}' class="form-control type_note edit_note_input" onkeyup="textAreaAdjust(this)"></textarea>

                </div>
                <form method="POST" id="edit_note_form{{this._id}}" action="/logs/{{ log._id }}">
                    <input type='hidden' name='note_id' value='{{ note.id }}'/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary float-left" data-dismiss="modal">Close</button>
                <button type='submit' name="update_btn" value="edit_note" form="edit_note_form{{this._id}}" class='btn btn-success mt-2 float-right'>Add Edit</button>
            </div>
        </div>
    </div>
</div>
