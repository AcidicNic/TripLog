<!-- Add Dose Modal -->
<div class="modal fade" id="addDoseModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Dose</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" id="add_dose_form" action="/logs/{{ log._id }}">
                    <div id="dose_wrapper" style="display: none;">
                        <div class="m-2" style="display: block;">
                            <span id="dose_title" class="dose_label m-2">Dose</span>
                            <i class="far fa-plus-square add_dose" onclick="addDose()"></i>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary float-left" data-dismiss="modal">Close</button>
                <button type='submit' name="update_btn" value="add_dose" form="add_dose_form" class='btn btn-success mt-2 float-right'>Add Dose</button>
            </div>
        </div>
    </div>
</div>
<script src="js/drug_list.js"></script>
