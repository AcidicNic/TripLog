<!-- home.hbs | landing page -->
{{#if err}}
<div class="mt-4">
    <div class="alert alert-warning alert-dismissible fade show my-2 w-50 mx-auto" role="alert">
      {{err}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
</div>
{{/if}}
{{#if msg}}
<div class="mt-4">
    <div class="alert alert-success alert-dismissible fade show my-2 w-50 mx-auto" role="alert">
      {{msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
</div>
{{/if}}

<div class="title_container card text-center mx-auto">
    <div class="card-body">
        <h1 class="triplog_title card-title text-center no_select">TripLog</h1>
        {{#if thisUser}}
            <button type="button" class="btn btn-light m-2" onclick="location.href='/archive';">Archive</button>
            <button type="button" class="btn btn-success m-2" onclick="location.href='/begin';">New Log</button>
            <button type="button" class="btn btn-secondary m-2" onclick="location.href='/begin';">Options</button>
            <button type="button" class="btn btn-light m-2" onclick="location.href='/logout';">Log Out</button>
        {{else}}
            <button type="button" class="btn btn-light m-2" onclick="location.href='/login';">Log In</button>
            <button type="button" class="btn btn-success m-2" onclick="location.href='/signup';">Sign Up</button>
        {{/if}}
    </div>
</div>
