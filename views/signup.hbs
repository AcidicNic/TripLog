<div class="title_container card text-center mx-auto">
    <div class="card-body">
        <h1 class="card-title text-center no_select mb-1">Sign Up</h1>
        <span class="text-muted">Hello, stragner!</span>
        <form class="mt-3" action="/signup" method="post">
            <div class="col-6 mx-auto">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control mb-2" placeholder="What's your name?" type="text" name="username" id="username" aria-describedby="usernameDesc"/>
                    <!-- <small id="usernameDesc" class="form-text text-muted">Whatever you'd like to be called.</small> -->
                </div>
                <div class="form-group">
                    <label class="text-left" for="password">Password</label>
                    <input class="form-control mb-2" placeholder="Password" type="password" name="password" id="password" aria-describedby="passwordDesc"/>
                    <small id="passwordDesc" class="form-text text-muted">Minimum: 8 characters, 1 number.</small>
                </div>
                <input class="btn btn-success mb-2 w-50 mx-auto" type="submit" class="btn btn-success" value="Submit"/>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-between mx-4">
        <a class="btn btn-sm btn-outline-dark" href="/">Back</a>
        <a class="btn btn-sm btn-outline-dark" href="/login">Already have an account?</a>
    </div>
</div>
